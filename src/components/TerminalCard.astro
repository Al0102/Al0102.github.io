---
import H1 from "./H1.astro";

interface Props {
  class?: string;
  title?: string;
  animate?: boolean;
}

const {
  class: className = "",
  title: titleContent = "",
  animate = true,
} = Astro.props;
---

<div
  title={titleContent}
  class={`TerminalCard rounded-card p-6 my-9 mx-3 md:mx-6 bg-dark-secondary shadow-dark-secondary/50 shadow-primary ${className}`}
>
  <H1>
    &gt;
    <span class={animate ? "animate-scroll-visible" : ""}
      >{!animate && titleContent}
    </span>
  </H1>
  <div
    class={`${animate ? "animate-finish-visible scale-y-0 origin-top text-dark-secondary" : ""}
      content overflow-hidden transition-primary`}
  >
    <slot />
  </div>
</div>
